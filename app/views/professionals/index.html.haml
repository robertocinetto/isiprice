.container
  .row
    .col-md-6
      %h1 Listing professionals

  - @professionals.each do |professional|
    .row.professional
      .col-md-2= image_tag professional.profile_img.url(:tiny).to_s
      .col-md-2
        = professional.name
        = professional.last_name
      .col-md-2
        = professional.profession
      .col-md-2
        = link_to 'Show', professional
        %br/
        = link_to 'Edit', edit_professional_path(professional)
      / .col-md-2= link_to 'Destroy', professional, :method => :delete, :data => { :confirm => 'Are you sure?' }


  .row
    / .col-md-2= link_to 'New Professional', new_professional_path, :class => 'btn btn-default'
