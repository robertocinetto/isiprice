.container.search-filters
  .row
    .col-md-6

      = form_tag professionals_path,  {:method => :get, :role => "form", :class => 'form-inline'} do
        .form-group
          = text_field_tag :search, params[:search], :class => 'form-control'
          = select_tag :distance, "<option>5</option><option>10</option><option>20</option><option>50</option>".html_safe, :class => 'form-control'
          = submit_tag "Search Near", :name => nil, :class => 'btn btn-default'
          = submit_tag "Reset",  :class => 'btn btn-success'




